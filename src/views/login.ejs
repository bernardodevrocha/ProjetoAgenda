<%- include('includes/head')%>
<%- include('includes/navbar')%>
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="display-1 text-center">Crie sua conta ou entre!</h1>
      <p class="text-center lead">Faça login ou crie sua conta!</p>

      <%- include('includes/messages');%>
    
    <div class="row">
      <div class="col-lg">
        <h4>Faça seu cadastro</h4>
        <p>Se você ainda não tem conta, crie uma aqui:</p>
        <form action="/login/register" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken%>">
          <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Seu e-mail</label>
            <input type="email" class="form-control" name="email">
          </div>

          <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Sua senha</label>
            <input type="password" class="form-control" name="password">
          </div>
          <button type="submit" class="btn btn-primary">Criar minha conta</button>
        </form>
      </div>
      
      <div class="col-lg">
        <h4>Faça seu login</h4>
        <p>Entre no sistema por aqui:</p>
        <form action="/login/login" method="POST">
          <input type="hidden" name="_csrf" value=<%= csrfToken%>>
          <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Seu e-mail</label>
            <input type="email" class="form-control" name="email">
          </div>

          <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Sua senha</label>
            <input type="password" class="form-control" name="password">
          </div>
          <button type="submit" class="btn btn-primary">Entrar</button>
        </form>
      </div>
    </div>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>
<%- include('includes/footer')%>